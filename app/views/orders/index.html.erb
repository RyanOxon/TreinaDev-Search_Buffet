  <div class="content">
    
    <div class="box" style="border: 1px solid lightgreen">
      <% if @open_orders.any? %>
        <p class="title is-4">Pedidos em aberto</p>
        <div class="columns is-multiline">
          <% @open_orders.each do |order| %>
            <div class="column is-2">
              <%= render order %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p>Nenhum pedido em aberto</p>
      <% end %>
    </div>

    <% if @closed_orders.any? %>
      <div class="box mt-5" style="border: 1px solid tomato">
        <p class="title is-4">Pedidos fechados</p>
        <div class="columns is-multiline">
          <% @closed_orders.each do |order| %>
            <div class="column is-2">
              <%= render order %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
