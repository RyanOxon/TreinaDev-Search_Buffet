<section class="section">
  <div class="content">
    <h1 class="title is-4">Resultados da Busca por: <%= @search %></h1>
    <p class="subtitle is-6"><%= @buffets.count %> buffet(s) encontrado(s)</p>

    <div class="columns is-multiline">
      <% @buffets.each do |buffet| %>
        <div class="column is-one-third">
          <div class="box">
            <p class="title is-5"><%= link_to buffet.brand_name, buffet_path(buffet), class: "has-text-primary" %></p>
            <p><%= buffet.city %>, <%= buffet.state_code %></p>
            <p><%= link_to "Ver detalhes", buffet_path(buffet), class: "button is-primary is-light mt-3" %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>